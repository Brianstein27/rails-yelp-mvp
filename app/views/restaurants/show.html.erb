<div class="container">
  <h1>Welcome to
    <%= @restaurant.name %></h1>
  <h3>Category</h3>
  <p><%= @restaurant.category.capitalize %></p>
  <h3>Address</h3>
  <p><%= @restaurant.address %></p>
  <h3>Phone Number</h3>
  <p><%= @restaurant.phone_number %></p>
  <% reviews = @restaurant.reviews %>
  <h3>Reviews</h3>
  <% reviews.each do |review| %>
    <div class="card my-3 p-3">
      <p><strong>Rating:</strong>
        <%= review.rating %></p>
      <p>
        <%= review.content %></p>
    </div>
  <% end %>

  <%= render "form", restaurant: @restaurant, review: @review %>
  <%= link_to "Back to all restaurants", restaurants_path, class: "my-3 btn btn-secondary" %>
</div>
